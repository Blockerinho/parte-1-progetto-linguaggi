
# 1. Test Importazione
<import> "library.xml" </import> # Importiamo la configurazione base

# 2. Test Sezione Semplice con Tipi Primitivi
<section name="BaseSettings">
    # Commento sopra un campo intero
    <field name="timeout"> 120 </field> # Commento inline (timeout in secondi)
    
    <field name="enable_logs"> true </field>
    <field name="app_name"> "SuperParser v1.0" </field> # Stringa con spazi
</section>

# 3. Test Ereditarietà e Override
<section name="ProductionSettings">
    # Eredita dalla sezione definita in library.xml
    <inherit> CommonConfig </inherit>
    
    # Sovrascrittura: cambia la porta di default
    <field name="default_port"> 9000 </field> # Override da 8080 a 9000
    
    # Nuovo campo specifico
    <field name="mode"> "PROD" </field>
</section>

# 4. Test Riferimenti (Locali e Non Locali) e Annidamento
<section name="AdvancedFeatures">
    
    <field name="local_ref"> $mode </field> # Errore? No, cercherà resolution dinamica o statica
    
    # Sezione annidata
    <section name="Network">
        # Riferimento a una variabile in un'altra sezione (Non-Local)
        <field name="target_port"> $ProductionSettings.default_port </field>
        
        # Riferimento locale (nello stesso scope/sezione padre se implementato)
        <field name="retry_strategy"> "exponential" </field>
    </section>
    
    # Commento tra la chiusura della sezione interna e quella esterna
</section>

# 5. Sezione Vuota (Edge Case)
